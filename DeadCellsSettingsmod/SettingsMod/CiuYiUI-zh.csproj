<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <ModType>mod</ModType>
    <ModName>Dead Cells Enhanced Settings</ModName>
    <ModMain>ChiuYiUI.Core.CHIUYIMain</ModMain>
	  <AutoInstallMod Condition="'$(Configuration)' == 'Debug'">true</AutoInstallMod>
	  <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DeadCellsCoreModding.MDK" Version="1.0.1" />
  </ItemGroup>

 <PropertyGroup>
    <GenerateSinglePakFile>false</GenerateSinglePakFile>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateDiffCDB>false</GenerateDiffCDB>
    <GameVersion>35</GameVersion>
  </PropertyGroup>

 <ItemGroup>
    <PackAssets Include="ChiuYiUI\**\*" RootInPak="SettingsLang" />
  </ItemGroup>

  <Target Name="CopyResPak" AfterTargets="MergeAllPaks">
    <Copy SourceFiles="$(MergedPakPath)"
          DestinationFiles="../../bin/core/host/res.pak" UseHardlinksIfPossible="true" />
  </Target>

</Project>
